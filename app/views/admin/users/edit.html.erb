<h1>Редактирование пользователя</h1>


<%= form_for :user, url: admin_user_path, method: :patch do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.submit 'Обновить' %>
  </p>

<% end %>

<%= link_to 'Назад', admin_user_path %>
